# Whop App Configuration
# Get these from your Whop developer dashboard: https://whop.com/dashboard/developer
WHOP_API_KEY=your_whop_api_key_here
NEXT_PUBLIC_WHOP_APP_ID=your_whop_app_id_here
NEXT_PUBLIC_WHOP_AGENT_USER_ID=your_agent_user_id_here
NEXT_PUBLIC_WHOP_COMPANY_ID=your_company_id_here

# Personal User ID (for sending messages as yourself, not as agent)
# Get this from your Whop profile URL: https://whop.com/user/[YOUR_USER_ID]
WHOP_PERSONAL_USER_ID=your_personal_user_id_here
WHOP_PERSONAL_USERNAME=your_personal_username_here

# Webhook Configuration
WHOP_WEBHOOK_SECRET=your_webhook_secret_here

# Server Configuration
PORT=3000
NODE_ENV=development
